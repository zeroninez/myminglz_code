{
  "name": "@repo/ui",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "npx tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "build": "npm run build:styles && npm run build:components",
    "check-types": "tsc --noEmit",
    "dev:styles": "npx tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "dev": "npm run dev:styles & npm run dev:components",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.0",
    "eslint": "^9.30.0",
    "tailwindcss": "^4.1.5",
    "typescript": "5.8.2"
  }
}
